{{define "admincalendar"}}

{{template "header" .}}
<script id="tmpl_eventForm" type="x-dot-template">
        <div class="form-group">
            <fieldset>
                <p>TimeStart</p>
                <input id="start" type="datetime-local" class="form-control form-control-sm">
                <br>
                <p>TimeEnd</p>
                <input id="end" type="datetime-local" class="form-control form-control-sm">
                <br>
                <p>Block Title</p>
                <input id="bTitle" type="text" placeholder="'Facilitation' by default" class="form-control form-control-sm">
                <br>
                <p>ClassRoom</p>
                <select class="form-control" id="room">
                    <option value="" disabled selected hidden>Select a Classroom</option>
                    {{`{{~it :value:index}}`}}
                        <option value="{{`{{=value.roomId}}`}}">{{`{{=value.roomName}}`}}</option>
                    {{`{{~}}`}}
                </select>
                <br>
                <p>Modifier</p>
                <input id="modifier" type="number" value="1" class="form-control form-control-sm">
                <br>
                <p>Note</p>
                <input id="note" type="text" placeholder="Insert a note for facilitators..." class="form-control form-control-sm">
                <br>
                <button id="submit" type="button" class="btn btn-primary">Submit</button>
            </fieldset>
        </div>
</script>

<main>
    <!-- Event Details Modal -->
    <div class="modal fade" id="eventDetailsModal" tabindex="-1" role="dialog" aria-labelledby="eventDetailsModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="eventModalTitle"></h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h5 id="modalWhereLabel" class="text-muted">Where:</h5>
                    <h5 id="modalEventRoom"></h5>
                    <h5 id="modalTimeLabel" class="text-muted">When:</h5>
                    <h5 id="modalEventTime"></h5>
                    <h5 id="modalCapacityLabel" class="text-muted">Capacity:</h5>
                    <h5 id="modalEventCapacity"></h5>
                    <h5 id="modalValueLabel" class="text-muted">Value:</h5>
                    <h5 id="modalDescLabel" class="text-muted">Description:</h5><br>
                    <p id="eventNote"></p><br>
                    <h5 class="text-left text-muted">Attending:</h5><br>
                    <div class="text-center" id="eventBookings"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div class="main-container">
        <div class="container">
            <div class="row">
                <div class="col-xs-2 float-left" id="eventForm"></div>
                <div class="col-xs-9">
                    <h2 class="text-center">Upcoming Schedule</h2>
                    <div class="card mp-2" id="wdgt-container">
                        <div class="mt-2" id="filterList">
                            <div class="btn-group text-center" data-toggle="buttons" id="filterButtons"></div>
                        </div>
                        <div id="calendar"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

{{template "footer" .}}

{{end}}