{{define "admincalendar"}}

{{template "header" .}}
<script id="tmpl_eventForm" type="x-dot-template">
        <div class="row">
            <div class="col-xs-3">
                <p>TimeStart</p>
                <p>TimeEnd</p>
                <p>ClassRoom</p>
                <p>Modifier</p>
                <p>Note</p>
                <button id="Submit" type="button">Submit</button>
            </div>
            <div class="col-xs-3">
                <input id="start" type="datetime-local">
                <input id="end" type="datetime-local">
                <select id="room">
                    <option value="" disabled selected hidden>Select a Classroom</option>
                    {{`{{~it :value:index}}`}}
                        <option value="{{`{{=value.roomName}}`}}">{{`{{=value.roomName}}`}}</option>
                    {{`{{~}}`}}
                </select>
                <input id="modifier" type="number" value="1">
                <input id="note" type="text" placeholder="Insert a message for any facilitators viewing this block...">
            </div>
        </div>
</script>

<main>
    <div class="main-container">
        <div class="row"><div class="col-xs-12"><br></div></div>
        <div class="row">
            <div class="col-lg-4" id="eventForm"></div>
            <div class="col-lg-8">
                <div id="calendar"></div>
            </div>
        </div>
    </div>
</main>

{{template "footer" .}}

{{end}}