{{define "adminclasses"}}

{{template "adminheader" .}}

<script id="tmpl_listClasses" type="x-dot-template">
        <table class="table table-hover">
        <tr>
            <th>Class ID</th>
            <th>Class Name</th>
            <th>Teacher</th>
            <th>Room #</th>
            <th></th>
        </tr>
        {{`{{~it :value:index}}`}}
        <tr>
            <td>{{`{{=value.roomId}}`}}</td>
            <td>{{`{{=value.roomName}}`}}</td>
            <td>{{`{{=value.teacher}}`}}</td>
            <td>{{`{{=value.roomNum}}`}}</td>
            <td><button id="edit_{{`{{=value.roomId}}`}}" type="button" class="btn btn-primary">Edit Classroom</button></td>
        </tr>
    {{`{{~}}`}}
    </table>              
</script>

<script id="tmpl_createClass" type="x-dot-template">
            <div class="row">
                <div class="col-sm-4"> Classname / Colour </div>
                <div class="col-sm-4"> <input id="cName" type="text" class="form-control form-control-sm"> </div>
            </div>
            <div class="row">
                <div class="col-sm-4"> Teacher </div>
                <div class="col-sm-4">
                        <select class="form-control" id="cTeacher">
                                <option value="">Select a teacher...</option>
                                {{`{{~it :value:index}}`}}
                                <option value="{{`{{=value.userId}}`}}">{{`{{=value.userName}}`}}</option>
                                {{`{{~}}`}}  
                        </select> </div>
            </div>
            <div class="row">
                <div class="col-sm-4"> Room # </div>
                <div class="col-sm-4"> <input id="cNum" type="text" class="form-control form-control-sm"> </div>
            </div>
            <div class="row">
                <button id="submit" type="button" class="btn btn-primary">Submit</button>
                <button id="cancel" type="button" class="btn btn-primary">Cancel</button>
            </div>
</script>
<main>
    </br>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <ul class="nav nav-pills flex-column">
                    <li class="nav-item"><a onClick="listClasses()">Edit Classroom</a></li>
                    <li class="nav-item"><a onClick="addClassRoom()">Add Classroom</a></li>
                </ul>
            </div>
        <div id="displayData" class="col-sm-9"></div>
    </div>
</main>

{{template "footer" .}}

{{end}}