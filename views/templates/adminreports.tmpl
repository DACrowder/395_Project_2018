{{define "adminreports"}}

{{template "header" .}}

<div id="family" onpageshow="familyData()">

  <button onclick="exportPdf()">Export to pdf</button>
  <button onclick="exportMonthly()" download="" href="#">Export to csv</button>
  <label>Select time: </label><input id="time" type="date"/>
  <br>
  <button onclick="previous()">Previous</button>
  <button onclick="next()">Next</button>
</div>
     <script>
     $("#time")[0].value = moment().format("YYYY-MM-DD");
     familyData();
</script>
<canvas id="skills"></canvas>

<script id="tmpl_reportFamily" type="x-dot-template">
  <table>
    <tr>
      <th>Family</th>
      <th>Family-Hours</th>
    </tr>
    {{`{{~it :value:index}}`}}
    <tr>
      <td>{{`{{=value.familyId}}`}}</td>
      <td>{{`{{=value.weekHours}}`}}</td>
    </tr>
    {{`{{~}}`}}
  </table>
</script>

<script id="tmpl_reportRoom" type="x-dot-template">
  <table>
    <tr>
      <th>Room</th>
      <th>Room-Hours</th>
    </tr>
    {{`{{~it :value:index}}`}}
    <tr>
      <td></td>
    </tr>
    {{`{{~}}`}}
  </table>
</script>

{{template "footer" .}}

{{end}}
