{{define "adminreports"}}

{{template "header" .}}

<div class="col-md-5" id="family" onpageshow="familyData()">
  <button type="button" class="btn btn-block btn-success text-center m-1 mt-3" style="font-size:1rem;" onclick="familyData()">Make charts</button>
  <button class="btn btn-block btn-info text-center m-1" style="font-size:1rem;" onclick="exportMonthly()" download="" href="#">Export</button>
</div>

<canvas id="skills"></canvas>

<script id="tmpl_reportFamily" type="x-dot-template">
  <table>
    <tr>
      <th>Family</th>
      <th>Family-Hours</th>
    </tr>
    {{`{{~it :value:index}}`}}
    <tr>
      <td>{{`{{=value.familyId}}`}}</td>
      <td>{{`{{=value.weekHours}}`}}</td>
    </tr>
    {{`{{~}}`}}
  </table>
</script>

<script id="tmpl_reportRoom" type="x-dot-template">
  <table>
    <tr>
      <th>Room</th>
      <th>Room-Hours</th>
    </tr>
    {{`{{~it :value:index}}`}}
    <tr>
      <td></td>
    </tr>
    {{`{{~}}`}}
  </table>
</script>

{{template "footer" .}}

{{end}}
