{{define "adminreports"}}

{{template "header" .}}

<div id="family" onpageshow="familyData()">
  <button onclick="familyData()">Make charts</button>
  <button onclick="exportMonthly()" download="" href="#">Export</button>
  <label>Select time: </label><input id="time" type="date"/> 
</div>

<canvas id="skills"></canvas>

<script id="tmpl_reportFamily" type="x-dot-template">
  <table>
    <tr>
      <th>Family</th>
      <th>Family-Hours</th>
    </tr>
    {{`{{~it :value:index}}`}}
    <tr>
      <td>{{`{{=value.familyId}}`}}</td>
      <td>{{`{{=value.weekHours}}`}}</td>
    </tr>
    {{`{{~}}`}}
  </table>
</script>

<script id="tmpl_reportRoom" type="x-dot-template">
  <table>
    <tr>
      <th>Room</th>
      <th>Room-Hours</th>
    </tr>
    {{`{{~it :value:index}}`}}
    <tr>
      <td></td>
    </tr>
    {{`{{~}}`}}
  </table>
</script>

{{template "footer" .}}

{{end}}
