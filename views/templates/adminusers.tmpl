<script id="tmpl_newFamily" type="x-dot-template">
    <table>
        <tr class="table-default">
            <td class="table-default"> Family Name</td>
            <td class="table-default"> <input id="famName" type="text" class="form-control form-control-sm"></td>
        </tr>
        <tr class="table-default">
        <td class="table-default">Parent One</td>
        <td class="table-default">
            <select class="form-control" id="parent1">
                    <option value="">Select a Parent/Facilitator</option>
                {{`{{~it :value:index}}`}}
