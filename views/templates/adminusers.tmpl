</script>

<script id="tmpl_listFamilies" type="x-dot-template">
    <table>
        <thead>
            <tr class="table-default">
                <th scope="col">Family ID</th>
                <th scope="col">SurName</th>
                <th></th>
            </tr>
        </thead>
