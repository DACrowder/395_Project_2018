        <input id="lName" type="text" class="form-control form-control-sm">
        <br>
        <p>Email</p>
        <input id="email" type="email" class="form-control form-control-sm">
        <br>
        <p>Phone #</p>
        <input id="phoneNum" type="tel" class="form-control form-control-sm">
        <br>
        <p>Bonus Hours</p>
        <input id="bonusHours" type="number" value="0" class="form-control form-control-sm">
        <br>
        <p>Bonus Note</p>
        <input id="bonusNote" type="text" placeholder="Reason for bonus hours" class="form-control form-control-sm">
        <br>
        <p>Password</p>
        <input id="pass1" type="password" class="form-control form-control-sm">
        <br>
        <p>Confirm Password</p>
        <input id="pass2" type="password" class="form-control form-control-sm">
        <br>
        <button id="submit" type="button" class="btn btn-primary">Submit</button>
        <button id="cancel" type="button" class="btn btn-primary">Cancel</button>
</script>

