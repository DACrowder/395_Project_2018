<script id="tmpl_editUser" type="x-dot-template">
    <div class="form-group">
        <p>User ID</p>
        <input id="IDNum" value="{{`{{=it.userId}}`}}" class="form-control form-control-sm" readonly>
        <br>
        <p>Username</p>
        <input id="uName" value="{{`{{=it.userName}}`}}" class="form-control form-control-sm" readonly>
        <br>
        <p>First Name</p>
        <input id="fName" type="text" value="{{`{{=it.firstName}}`}}" class="form-control form-control-sm">
        <br>
        <p>Last Name</p>
        <input id="lName" type="text" value="{{`{{=it.lastName}}`}}" class="form-control form-control-sm">
        <br>
        <p>Email</p>
        <input id="email" type="email" value="{{`{{=it.email}}`}}" class="form-control form-control-sm">
        <br>
        <p>Phone #</p>
        <input id="phoneNum" type="tel" value="{{`{{=it.phoneNumber}}`}}" class="form-control form-control-sm">
        <br>
        <p>Bonus Hours</p>
        <input id="bonusHours" type="number" value="{{`{{=it.bonusHours}}`}}" class="form-control form-control-sm">
        <br>
        <p>Bonus Note</p>
        <input id="bonusNote" type="text" value="{{`{{=it.bonusNote}}`}}" class="form-control form-control-sm">
        <br>
        <button id="submit" type="button" class="btn btn-primary">Submit</button>
        <button id="cancel" type="button" class="btn btn-primary">Cancel</button>
</script>

<script id="tmpl_addUser" type="x-dot-template">
    <div class="form-group">
        <p>Role</p>
        <select class="form-control" id="role">
            <option value="1">Facilitator</option>
            <option value="2">Teacher</option>
        </select>
        <br>
        <p>First Name</p>
        <input id="fName" type="text" class="form-control form-control-sm">
        <br>
