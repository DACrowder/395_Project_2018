        <td class="table-default"> Parent Two</td>
        <td class="table-default">
            <select class="form-control" id="parent2">
                    <option value="">Select a Parent/Facilitator</option>
                {{`{{~it :value:index}}`}}
                    <option value="{{`{{=value.userId}}`}}">{{`{{=value.userName}}`}}</option>
                {{`{{~}}`}}    
            </select>
        </td>
        </tr>
            <td class="table-default"> Children</td>
            <td class="table-default"> <input id="children" type="number" class="form-control form-control-sm"></td>
